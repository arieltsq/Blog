<div class="well">

<h1>Hello! Please Login to Proceed</h1>
<%= form_tag sessions_path do %>

<div class="form-group">

  <%= label_tag :email %>


  <%= text_field_tag :email,nil, class: "form-control", placeholder: "Enter Rmail", autofocus: true %>

</div>
<div class="form-group">


  <%= label_tag :password%>

  <%= password_field_tag :password,nil, class: "form-control", placeholder: "Enter Password", autofocus: true %>


</div>
<div class="form-group">

  <div class = "actions">
    <%= submit_tag "Sign In", class:"btn btn-success pull-left" %>

  <%= link_to 'Sign Up', new_user_path ,class:"btn btn-info pull-right" %>
  </div>
</div>
  <%end %>
</div>
