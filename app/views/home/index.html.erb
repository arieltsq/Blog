

<h1> EVERYONE'S POST <h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="posts">
    <% @posts.each do |post| %>
    <tr class="post">
      <td><%= post.user.email%></td>
      <td><%= post.title %></td>
      <td><%= post.body %></td>
      <td><%= post.created_at %></td>
      <td><%= link_to 'Show', user_post_path(post.user,post) %></td>
  </tr>
    <% end %>
  </tbody>
</table>
